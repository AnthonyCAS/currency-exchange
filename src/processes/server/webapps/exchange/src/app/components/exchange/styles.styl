@import '../../shared/settings'

:host
    .header-section
        position: absolute
        left: 0px
        top: 0px
        width: 100%
        height: 250px
        background: #dee9ee
        border-top: 1px solid #FFF

        img 
            position: relative
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
    
    .exchange-container
        position: absolute
        left: 0px
        top: 250px
        width: 100%
        height: calc( 100% - 450px )
        overflow: auto
        background: white

        .currency-box
            width: 100%
            height 200px
            text-align: center
            padding-top: 16px

            .currencyinput
                display: inline
                
                input
                    padding: 10px
                    width: 30%
                    border: 1px solid #ccc
                    background: #fff
                    font-size: 14px
                    color: #333
                    display: inline
                    font-family: Arial, Helvetica, sans-serif
                    margin: 36px

                    &.blocked
                        background: #f0f0f0

        button
            border: none
            background: none
            height: 48px
            
            &.compute-rate
                background: #00afe5
                color: white
                width: 30%
                font-size: 16px
                padding: 0px 30px
                font-weight: bold
                position: relative
                left: 50%
                transform: translate(-50%, 0)
    
    .footer
        position: absolute
        opacity: 1
        left: 0px
        bottom: 0px
        width: 100%
        height 200px