.bg
	
	.a
		position: absolute
		left: 0px
		top: 0px
		border-top: 10px solid sch-color1
		width: 100%
		height 50%
		background: #dd750073
	
	.b
		position: absolute
		opacity: 1
		left: 0px
		bottom: 0px
		width: 100%
		height 50%

.logo
	position: absolute
	left: 10%
	top: calc( 25% - 40px )
	height: 150px

	img
		height: 100%

.form-container
	position: absolute
	right: 80px
	top: calc( 50% - 250px )
	width: 260px
	height: 460px
	background: #EEE
	padding: 30px

	.invalid-credentials
		padding: 5px 10px
		font-family: Arial, Helvetica, sans-serif
		font-size: 14px
		background: #d65555
		color: #EEE

	h1
		font-size: 20px
		color: #0099DD
		font-weight: normal
		font-family: Arial 
	
	input
		padding: 10px
		width: calc( 100% - 20px )
		border: 1px solid #CCC
		background: #FFF
		font-size: 14px
		color: #333333
		font-family: Arial, Helvetica, sans-serif

		&::-webkit-input-placeholder /* Chrome/Opera/Safari */
			color: #CCC;
		&::-moz-placeholder/* Firefox 19+ */
			color: #CCC;
		&:-ms-input-placeholder/* IE 10+ */
			color: #CCC;
		&:-moz-placeholder/* Firefox 18- */
			color: #CCC;
		
	button
		width: 100%
		padding: 10px
		border: none 
		background: #0056b8
		color: #eeeeee
		font-size: 14px
	
	a
		color: #058
		font-size: 14px
		font-family: Arial, Helvetica, sans-serif
		cursor: pointer